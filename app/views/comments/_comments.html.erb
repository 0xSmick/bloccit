<div class="row">
  <div class="col-md-8">
    <% comments.each do |comment| %>
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
          <%= content_tag :p, (markdown comment.body) %>
    <% if policy(comment).destroy? %>
      <%= link_to "Delete", [@topic, @post, comment], method: :delete %>
      <% end %>

        </h4>
      </div>
    </div>
  </div>
  <% end %>
</div>


